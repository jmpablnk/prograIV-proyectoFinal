@model IEnumerable<PIV_PF_ProyectoFinal.Models.Factura>

@{
    ViewData["Title"] = "Index";
}


<style>
  


    h1 {
        color: black;
        text-decoration: underline;
    }
</style>



<br>
<br>
<p>
    <a type="button" class="btn btn-primary btn-lg" asp-action="Create">Añadir Factura</a>
</p>



<table class="table table-dark table-striped">


    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClientesNavigation).Replace("IdClientesNavigation", "Cliente")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MetodoPago)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClientesNavigation.NombreCliente)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CodigoFactura">
                        <img src="~/img/registro-en-linea.png" title="Detalles" width="40" height="40" class="d-inline-block align-text-top" />
                    </a> |
                </td>
            </tr>
        }
    </tbody>
</table> 

