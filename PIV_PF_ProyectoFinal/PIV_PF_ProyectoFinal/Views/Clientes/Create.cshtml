@model PIV_PF_ProyectoFinal.Models.Cliente







@{
    ViewData["Title"] = "Create";
}
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        @ViewBag.Mensaje
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
@{
    ViewData["Title"] = "Añadir Cliente";
}
<style>
    body {
        background-image: url('@Url.Content("~/img/fondo2.jpg")');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
        font-size: 18px;
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<h1>Añadir Cliente</h1>

<h4>Cliente</h4>
<hr />



<form class="row g-3" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="col-md-4">
        <label asp-for="Identificacion" class="form-label">Identificación</label>
        <input asp-for="Identificacion" class="form-control" id="validationDefault01" >
        <span asp-validation-for="Identificacion" class="text-danger"></span>
  </div>
    <div class="col-md-4" >
        <label asp-for="NombreCliente" class="form-label">Nombre Completo</label>
        <input asp-for="NombreCliente" class="form-control" id="validationDefault02">
        <span asp-validation-for="NombreCliente" class="text-danger"></span>
  </div>
  <div class="col-md-4" >
  
            <label asp-for="Correo" class="form-label">Correo Electrónico</label>
            <input asp-for="Correo" class="form-control" id="validationDefaultUsername">
            <span asp-validation-for="Correo" class="text-danger"></span>
    </div>
  
  <div class="col-12" >
        <button class="btn btn-primary" type="submit" style="margin-bottom: 5px;">Añadir Usuario</button>
  </div>
</form>


<div>
    <a style="margin-bottom: 7px;" type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
</div>
    

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
