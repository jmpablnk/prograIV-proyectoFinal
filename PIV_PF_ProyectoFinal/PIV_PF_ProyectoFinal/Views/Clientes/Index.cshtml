@model IEnumerable<PIV_PF_ProyectoFinal.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}


<br>
<br>
<p >
    <a  type="button" class="btn btn-primary btn-lg" asp-action="Create">Añadir Cliente</a>
</p>



<table class="table table-dark table-striped">


    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@item.IdClientes">Editar</a> |
                    <a type="button" class="btn btn-light" asp-action="Details" asp-route-id="@item.IdClientes">Detalles</a> |
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdClientes">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

