<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<style>
    body {
        /* Establecer la imagen de fondo y ajustar el tamaño y la posición según sea necesario */
        background-image: url('img/composicion-elementos-medicos-laicos-planos-sobre-fondo-cemento-azul.jpg');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
    }


    h1 {
        color: black;
        text-decoration: underline;
    }
</style>
<h1>Detalles</h1>

<div>
    <h4>Cliente</h4>
    <div class="card" style="width: 18rem;">
        <img src="~/img/usuario (1).png"  class="card-img-top"  alt="">
        <div class="card-body">
            <h5 class="card-title">Cliente</h5>
            <dl class="row">
                <dt >
                    @Html.DisplayNameFor(model => model.Identificacion)
                </dt>
                <dd >
                    @Html.DisplayFor(model => model.Identificacion)
                </dd>
                <dt >
                    @Html.DisplayNameFor(model => model.NombreCliente)
                </dt>
                <dd >
                    @Html.DisplayFor(model => model.NombreCliente)
                </dd>
                <dt >
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd >
                    @Html.DisplayFor(model => model.Correo)
                </dd>
            </dl>
            <a style="margin-bottom: 7px type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdClientes">Editar</a>
            <a style="margin-bottom: 7px type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
        </div>
    </div>
</div> 

