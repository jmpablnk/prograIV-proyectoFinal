@model PIV_PF_ProyectoFinal.Models.Producto

@{
    ViewData["Title"] = "Detalles";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<style>
    body {
        /* Establecer la imagen de fondo y ajustar el tamaño y la posición según sea necesario */
        background-image: url('img/detailsproductos.jpg');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
    }

    dl.row {
        margin-bottom: 20px;
    }

    dt {
        text-align: left;
    }

    dd {
        margin-bottom: 10px;
    }

    h1 {
        color: black;
        text-decoration: underline;
    }
</style>
<h1>Detalles</h1>

<div>

    <div class="card d-flex align-items-center justify-content-center" style="width: 18rem;text-align:center;">
        <img src="~/img/iconoproductodetails.jpg" class="card-img-top" style="width: 100px; height: auto; ">
        <div class="card-body">
            <h5 class="card-title">Productos</h5>
            <dl class="row">
                <dt>
                    @Html.DisplayNameFor(model => model.DescripcionProducto)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.DescripcionProducto)
                </dd>
                <dt >
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Estado)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CantidadStock)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CantidadStock)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CodigoTipoProductoNavigation)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CodigoTipoProductoNavigation.CodigoTipoProducto)
                </dd>
            </dl>
            <a style="margin-bottom: 7px;" type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CodigoProducto">Editar</a>
            <a style="margin-bottom: 7px;" type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
        </div>
    </div>

</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
