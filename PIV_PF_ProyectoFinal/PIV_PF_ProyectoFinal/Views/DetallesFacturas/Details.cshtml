@model PIV_PF_ProyectoFinal.Models.DetallesFactura

@{
    ViewData["Title"] = "Details";
}


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<style>
    body {
        background-image: url('@Url.Content("~/img/fondo2.jpg")');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
        font-size: 18px;
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>


<br>
<br>
<div>
    <div class="card d-flex align-items-center justify-content-center" style="width: 18rem;">
        <img src="~/img/registrarse.png" class="card-img-top" style="width: 100px; height: auto; ">
        <div class="card-body">
            <h5 class="card-title">Detalle Factura</h5>
            <dl class="row">
                <dt>
                    Subtotal
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Subtotal)
                </dd>
                <dt >
                    Total
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Total)
                </dd>
                <dt >
                    Código Factura
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CodigoFacturaNavigation.CodigoFactura)
                </dd>
                <dt >
                    Código Producto
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CodigoProductoNavigation.CodigoProducto)
                </dd>
            </dl>
            <a style="margin-bottom: 7px;" type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
        </div>
    </div>

</div>






<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>