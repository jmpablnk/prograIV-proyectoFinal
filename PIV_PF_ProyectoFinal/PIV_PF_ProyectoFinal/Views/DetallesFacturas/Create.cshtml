@model PIV_PF_ProyectoFinal.Models.DetallesFactura


@{
    ViewData["Title"] = "Create";
}



<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<style>
    body {
        background-image: url('@Url.Content("~/img/fondo2.jpg")');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
        font-size: 18px;
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>



<h1>Añadir Detalle Factura</h1>

<h4>Detalle Factura</h4>
<hr />



<div class="col-12">
    <form class="row g-3" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-md-2">
        <label asp-for="Subtotal" class="form-label">Subtotal</label>
        <input asp-for="Subtotal" class="form-control" id="validationDefault01">
        <span asp-validation-for="Subtotal" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        <label asp-for="Total" class="form-label">Total</label>
        <input asp-for="Total" class="form-control" id="validationDefault02">
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>
    <div class="col-md-2">

        <label asp-for="CodigoFactura" class="form-label">Código Factura</label>
        <input asp-for="CodigoFactura" class="form-control" id="validationDefaultUsername">
        <span asp-validation-for="CodigoFactura" class="text-danger"></span>
    </div>
    <div class="col-md-2">

        <label asp-for="CodigoProducto" class="form-label">Código Producto</label>
        <input asp-for="CodigoProducto" class="form-control" id="validationDefaultUsername">
        <span asp-validation-for="CodigoProducto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>
    <div>
        <a style="margin-bottom: 7px;" type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
    </div>
</form>
</div>


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
