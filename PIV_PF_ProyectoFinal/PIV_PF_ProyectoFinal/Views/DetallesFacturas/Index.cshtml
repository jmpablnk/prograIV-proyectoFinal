@model IEnumerable<PIV_PF_ProyectoFinal.Models.DetallesFactura>

@{
    ViewData["Title"] = "Index";
}


<br>
<br>
<p>
    <a type="button" class="btn btn-primary btn-lg" asp-action="Create">Nuevo Detalle Factura</a>
</p>





<table class="table table-dark table-striped">

   
    <thead>
        <tr style="text-align:center;">
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoFacturaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoProductoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td>
                    @Html.DisplayFor(modelItem => item.Subtotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoFacturaNavigation.CodigoFactura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CodigoProductoNavigation.CodigoProducto)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.CodigoFactura">
                        <img src="~/img/registro-en-linea.png" title="Detalles" width="40" height="40" class="d-inline-block align-text-top" />
                    </a> |
                </td>
            </tr>
        }
    </tbody>
</table>
