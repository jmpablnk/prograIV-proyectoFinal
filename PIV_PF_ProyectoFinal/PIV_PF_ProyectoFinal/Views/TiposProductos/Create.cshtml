@model PIV_PF_ProyectoFinal.Models.TiposProducto
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        @ViewBag.Mensaje
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-image: url('@Url.Content("~/img/fondo2.jpg")');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
        font-size: 18px;
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>


<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />


<h1>Crear Tipo Producto</h1>

<h4>Tipo Producto</h4>
<hr />
<div class="form-container">
    <form class="row g-3" asp-action="Añadir Tipo de Producto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-4">
            <label asp-for="CodigoTipoProducto" class="form-label">Código Tipo de Producto</label>
            <input asp-for="CodigoTipoProducto" class="form-control" />
            <span asp-validation-for="CodigoTipoProducto" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="DescripcionTipoProducto" class="form-label">Descripcion Tipo de Producto</label>
            <input asp-for="DescripcionTipoProducto" class="form-control" />
            <span asp-validation-for="DescripcionTipoProducto" class="text-danger"></span>
        </div>


        <div class="col-12">
            <input style="margin-bottom: 5px;" type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div>
            <a style="margin-bottom: 7px;" type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
        </div>
    </form>
</div>


<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
