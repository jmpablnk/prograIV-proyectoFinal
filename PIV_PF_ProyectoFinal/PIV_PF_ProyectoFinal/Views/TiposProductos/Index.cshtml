@model IEnumerable<PIV_PF_ProyectoFinal.Models.TiposProducto>

@{
    ViewData["Title"] = "Index";
}



<style>
    body {
        /* Establecer la imagen de fondo y ajustar el tamaño y la posición según sea necesario */

        background-image: url('img/resumen-borroso-defocused-farmacia-farmacia.jpg');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>

<br>
<br>
<p>
    <a type="button" class="btn btn-primary btn-lg" asp-action="Create">Nuevo Tipo de Producto</a>
</p>
<br>

<table class="table table-dark table-striped">


    <thead>
        <tr style="text-align:center;">
            <th>
                @Html.DisplayNameFor(model => model.DescripcionTipoProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
            
                <td>
                        @Html.DisplayFor(modelItem => item.DescripcionTipoProducto)
                </td>
                <td>
                    <a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@item.CodigoTipoProducto">Editar</a> |
                    <a type="button" class="btn btn-light" asp-action="Details" asp-route-id="@item.CodigoTipoProducto">Detalles</a> |
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CodigoTipoProducto">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

