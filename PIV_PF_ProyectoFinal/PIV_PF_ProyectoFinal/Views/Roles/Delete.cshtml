@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Delete";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<style>
    body {
        background-image: url('@Url.Content("~/img/fondo2.jpg")');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
        font-size: 18px;
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>

<h1>Eliminar Rol</h1>

<h3>¿Seguro de que deseas eliminar este rol?</h3>
<div>
    <div>

        <div class="card d-flex align-items-center justify-content-center" style="width: 18rem;text-align:center;">
            <br>
            <img  src="~/img/registro.png"  class="card-img-top" style="width: 100px; height: auto; ">
            <div class="card-body">
                <h5 class="card-title">Cliente</h5>
                <dl class="row">
                    <dt >
                        Nombre
                    </dt>
                    <dd >
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>


                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a type="button" class="btn btn-warning" asp-action="Index">Regresar a la lista</a>
                </form>

            </div>
        </div>

    </div>

</div>