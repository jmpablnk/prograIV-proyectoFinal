@model PIV_PF_ProyectoFinal.Models.Usuario
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        @ViewBag.Mensaje
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
@{
    ViewData["Title"] = "Editar";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<style>
    body {
        /* Establecer la imagen de fondo y ajustar el tamaño y la posición según sea necesario */
        background-image: url('img/detailsproducto.jpg');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
    }

    h1 {
        color: black;
        text-decoration: underline;
    }
</style>

<h1>Editar</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUsuario" />
            <div class="form-group">
                <label asp-for="IdentificacionUsuario" class="control-label"></label>
                <input asp-for="IdentificacionUsuario" class="form-control" />
                <span asp-validation-for="IdentificacionUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCompletoUsuario" class="control-label"></label>
                <input asp-for="NombreCompletoUsuario" class="form-control" />
                <span asp-validation-for="NombreCompletoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorreoUsuario" class="control-label"></label>
                <input asp-for="CorreoUsuario" class="form-control" />
                <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoUsuario" class="control-label"></label>
                <input asp-for="TipoUsuario" class="form-control" />
                <span asp-validation-for="TipoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoUsuario" class="control-label"></label>
                <input asp-for="EstadoUsuario" class="form-control" />
                <span asp-validation-for="EstadoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContrasenaUsuario" class="control-label"></label>
                <input asp-for="ContrasenaUsuario" class="form-control" />
                <span asp-validation-for="ContrasenaUsuario" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button class="btn btn-primary" type="submit" style="margin-bottom: 5px;">Guardar</button>
                <a type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
            </div>
        </form>
    </div>
</div>



<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.esm.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


