@model PIV_PF_ProyectoFinal.Models.Usuario
@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-success">
        @ViewBag.Mensaje
    </div>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-image: url('@Url.Content("~/img/fondo2.jpg")');
        background-size: cover;
        background-position: center;
        font-family: 'Times New Roman';
        font-size: 18px;
    }



    h1 {
        color: black;
        text-decoration: underline;
    }
</style>

<h1>Crear Usuario</h1>

<h4>Usuario</h4>
<hr />
<div class="form-container">
    <form class="row g-3" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-md-4">
            <label asp-for="IdentificacionUsuario" class="form-label">Identificacion </label>
            <input asp-for="IdentificacionUsuario" class="form-control" />
            <span asp-validation-for="IdentificacionUsuario" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="NombreCompletoUsuario" class="control-label">Nombre Completo</label>
            <input asp-for="NombreCompletoUsuario" class="form-control" />
            <span asp-validation-for="NombreCompletoUsuario" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="CorreoUsuario" class="control-label">Correo</label>
            <input asp-for="CorreoUsuario" class="form-control" />
            <span asp-validation-for="CorreoUsuario" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="TipoUsuario" class="control-label">Tipo de Usuario</label>
            <select asp-for="TipoUsuario" class="form-control">
                <option value="Administrador">Administrador</option>
                <option value="Vendedor">Vendedor</option>
                <option value="Contador">Contador</option>
            </select>
            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="EstadoUsuario" class="control-label">Estado de Usuario</label>
            <select asp-for="EstadoUsuario" class="form-control">
                <option value="Activo">Activo</option>
                <option value="Inactivo">Inactivo</option>
            </select>
            <span asp-validation-for="EstadoUsuario" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="ContrasenaUsuario" class="control-label">Contraseña</label>
            <input asp-for="ContrasenaUsuario" class="form-control" />
            <span asp-validation-for="ContrasenaUsuario" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <button class="btn btn-primary" type="submit" style="margin-bottom: 5px;">Añadir Producto</button>
        </div>
    </form>
</div>


<div>
    <a style="margin-bottom: 7px;" type="button" class="btn btn-danger" asp-action="Index">Regresar a la lista</a>
</div>










@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
